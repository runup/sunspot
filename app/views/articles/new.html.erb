<div class="row">
    <aside class="span4">    
      <section>
        用户名：
        <%=@user.name%></br>
        <%=@user.email%>
      </section>
    </aside> 


<div class="span8">
<%= form_for(@article) do |f| %>

  <div class="field">
    <%= f.label :题目 %><br />
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :标签 %><br />
    <%= f.select :tag, options_for_select([['知识管理'], ['java开发'], ['ruby开发'], ['脚本语言']])%>
  </div>
    
  <div class="field">
    <%= f.label :内容 %><br />
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit  :提交 , class: "btn btn-large btn-primary" %>
  </div>
<% end %>
</div>
  
</div>

